#!/usr/bin/make -f

DEB_HOST_ARCH ?= $(shell dpkg-architecture -qDEB_HOST_ARCH)

ifeq (,$(findstring hurd,$(DEB_HOST_ARCH)))
I965_DRIVER=$(shell dpkg-architecture -a$(DEB_HOST_ARCH) -iany-amd64 || \
	dpkg-architecture -a$(DEB_HOST_ARCH) -iany-i386 && \
	echo '--enable-i965-driver')
endif

CONFIGURE_OPTIONS ?= --prefix=/usr --disable-silent-rules $(I965_DRIVER)

%:
	dh --with autoreconf $@

override_dh_makeshlibs:
	dh_makeshlibs -Nlibva1 -Nlibva-x11-1
	dh_makeshlibs -plibva-x11-1 -V 'libva-x11-1 (>> 1.0.15~)'
	dh_makeshlibs -plibva1      -V 'libva1 (>> 1.0.15~)'

override_dh_auto_configure:
	dh_testdir
	./configure $(CONFIGURE_OPTIONS)

get-orig-source:
	$(dir $_)libva-get-orig-source
